<settings>
<category label="VIP">
	<setting label="CONFIGURAÇÕES ADICIONAIS" type="lsep"/>
    <setting id="use_thumb" type="bool" label="Use Miniaturas como Fanart" default="false" />
	<setting id="Updatecommonresolvers" type="bool" label="Atualizar Resolvedores Comuns" default="true"/>
    <setting id="logo-folderPath" type="folder"  label="Selecione o diretório para o logotipo." default=""/>
</category>
<category label="Visualização">
    <setting id="use_thumb" type="bool" label="Usar Thumbnails como Fanart" default="true" />
    <setting id="add_playlist" type="bool" label="Mostrar Janela de seleção de Links" default="true"/>
    <setting id="ask_playlist_items" type="bool" label="Escolher items do Menu de Contexto" default="true" />
  </category>
  <category label="Complementos">
	<setting label="[COLOR aqua]Configurações de Complemento:[/COLOR]" type="lsep"/>
	<setting label="Verificar Complementos" id="check_addon" type="bool" default="false" />
	<setting label="Baixar e Instalar Elementum" id="elementum" type="bool" default="false" />
	<setting label="Baixar e Instalar Youtube" id="youtube" type="bool" default="true" />
</category>
<category label="Legenda">
	<setting label="[COLOR lightblue]Legenda[/COLOR]" type="lsep"/>
	<setting label="Pedir legenda externa ao reproduzir?" id="legenda" type="bool" default="false" />
</category>
<category label="Minha Lista">
	<setting label="[COLOR lightblue]Minha Lista[/COLOR]" type="lsep"/>
	<setting label="Entre aqui para limpar Minha Lista" type="action" action="RunScript(plugin.video.PlayCine, limparMinhaLista)"/>	
</category>
<category label="Aparência">
	<setting label="[COLOR lightblue]Aparência[/COLOR]" type="lsep"/>
	<setting label="Exibir Menus" id="menus" type="enum" values="Padrão|Lista" default="0" />
	<setting label="Exibir Itens" id="itens" type="enum" values="Padrão|Lista" default="0" />
</category>
</settings>